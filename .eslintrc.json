{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "never"],
        "quotes": [1, "single", "avoid-escape"],
        "eqeqeq": 0,
        "brace-style": [2, "stroustrup"],
        "eol-last": 0,
        "no-nested-ternary": 1,
        "padded-blocks": [1, "never"],
        "space-before-blocks": [1, "always"],
        "no-console": [1]
    }
}
